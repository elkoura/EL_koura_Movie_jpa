<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="filmsPU">
        <class>entities.Acteur</class>
        <class>entities.Realisateur</class>
        <class>entities.Pays</class>
        <class>entities.Film</class>
        <class>entities.Role</class>
        <class>entities.FilmRealisateur</class>
        <class>entities.CastingPrincipale</class>
        <!-- Ajoutez d'autres classes si nÃ©cessaire -->
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/films"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
